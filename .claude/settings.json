{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "contextFiles": [
    "5-Identity/TELOS.md",
    "5-Identity/AI_RULES.md",
    "5-Identity/MEMORY.md",
    "5-Identity/CONTEXT.md",
    "5-Identity/PROFILE.md",
    "6-System/working-memory/OPERATING_RULES.md"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'cd \"$(git rev-parse --show-toplevel)\" && python3 ./6-System/hooks/startup.py'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'cd \"$(git rev-parse --show-toplevel)\" && python3 ./6-System/hooks/stop_audit.py'"
          },
          {
            "type": "command",
            "command": "bash -c 'cd \"$(git rev-parse --show-toplevel)\" && python3 ./6-System/hooks/session_export.py'"
          }
        ]
      }
    ]
  }
}
